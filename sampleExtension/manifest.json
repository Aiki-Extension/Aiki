{
  "manifest_version": 2,

  "name": "The Distraction Shield",
  "description": "Divert attention from social media websites to learning a new language",
  "version": "0.1",
  //Icon's shown in chrome://extensions
  "icons": {"128": "icon.png"},
  "offline_enabled": false,

  //what pops up once we hit the options
  "options_page": "popup.html",
  "options_ui": {
    "chrome_style": true,
    "page": "popup.html"
  },

  //Icon in the browser specification
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Distraction Shield Settings",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["iframe/jquery-ui.css"],
      "js": ["iframe/jquery-1.10.2.js","iframe/jquery-ui.js", "insertIframe.js","iframe.js"]
    }
  ],

  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "web_accessible_resources": ["iframePopup.html", "iframe.js","iframe/jquery-1.10.2.js","iframe/jquery-ui.css","iframe/jquery-ui.js"]

}