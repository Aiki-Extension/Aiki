{
  "manifest_version": 2,

  "name": "The Distraction Shield",
  "description": "Divert attention from social media websites to learning a new language",
  "version": "0.1",
  //Icon's shown in chrome://extensions
  "icons": {"128": "icon.png"},
  "offline_enabled": false,

  //what pops up once we hit the options
  "options_page": "optionsPage/options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "optionsPage/options.html"
  },

  //Icon in the browser specification
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Distraction Shield Settings"
  },

  "background": {
    "scripts": ["constants.js","syncStorage.js", "background.js", "init.js"]
  },

  //TODO update to current state of extension
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["jquery/jquery-ui.css"],
      "js": ["jquery/jquery-1.10.2.js"]
    },
    {
      "matches" : ["https://zeeguu.herokuapp.com/get-ex"],
      "js" : ["constants.js","syncStorage.js", "intercept/inject.js"]
    }
  ],

  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "web_accessible_resources": [
    "intercept/bindEvents.js"
  ]

}
