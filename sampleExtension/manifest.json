{
  "manifest_version": 2,

  "name": "The Distraction Shield",
  "description": "Divert attention from social media websites to learning a new language",
  "version": "1.2",
  //Icon's shown in chrome://extensions
  "icons": {"128": "icon.png"},
  "offline_enabled": false,

  //what pops up once we hit the options
  "options_page": "optionsPage/options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "optionsPage/options.html"
  },

  //Icon in the browser specification
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Distraction Shield Settings",
    "default_popup": "tooltipPage/tooltip.html"        // optional
  },

  "background": {
    "scripts": [
      "jquery/jquery-1.10.2.js",
      "modules/url_formatter.js",
      "constants.js",
      "modules/blocked_site.js",
      "modules/sync_storage.js",
      "modules/user_settings.js",
      "background.js",
      "init.js",
      "statistics/trackerStorage.js",
      "statistics/tracker.js"
    ]
  },

  "content_scripts": [
    {
      "matches" : ["https://zeeguu.herokuapp.com/get-ex"],
      "css": ["jquery/jquery-ui.css"],
      "js" : ["jquery/jquery-1.10.2.js","constants.js","modules/sync_storage.js", "intercept/inject.js"]
    }
  ],

  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "idle",
    "<all_urls>"
  ],

  "web_accessible_resources": [
    "intercept/bindEvents.js"
  ]

}
